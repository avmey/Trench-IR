  <!-- START headline -->
  <section class="ftco-section-parallax">
    <div class="parallax-img d-flex align-items-center">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12 text-center heading-section heading-section-white ftco-animate">
            <header>
      				<h3 style="color: white;">Download:
                <a href="https://trenchir.blob.core.windows.net/originals/{{this.name}}" class="btn btn-primary">FLIR image</a>
                <a href="https://trenchir.blob.core.windows.net/raw/RAW-{{this.name}}.tiff" class="btn btn-primary">RAW image</a>
                <a href="https://trenchir.blob.core.windows.net/param/PARAM-{{this.name}}.json" class="btn btn-primary">Parameter file</a>
                <a href="https://trenchir.blob.core.windows.net/embedded/EMBED-{{this.name}}" id="embedbtn" class="btn btn-primary">Embedded image</a>
      			  </h3>
              <hr>
            </header>
            <div class="row">
              <div class="col" style="text-align: right;">
                <div class="tt" style="align:right;">
                  <div id="container1" style="vertical-slight:middle; float: middle;">
                    <img id="embedded" style="max-height: 50vh; width: auto; margin-top:10px;" src="https://trenchir.blob.core.windows.net/embedded/EMBED-{{this.name}}">
                    <img id="og" style="max-height: 50vh; width: auto; margin-top:10px;" src="https://trenchir.blob.core.windows.net/originals/{{this.name}}">
                  </div>
                </div>

                <img id="og_backup" style="max-height: 50vh; width: auto; margin-top:10px; display:none;" src="https://trenchir.blob.core.windows.net/originals/{{this.name}}">
              </div>
              <div class="col" style="text-align: left;">
                <h3 style="color: white;">Image Specifics</h3>
                <p id="species">Species: {{this.species}}</p>
                <p id="common">Common Name: {{this.common}}</p>
                <p id="geo">Image Captured: ({{this.geoLat}},{{this.geoLon}})</p>
                <p id="fauna">Fauna: {{this.fauna1}}, {{this.fauna2}}</p>
                <p id="flora">Flora: {{this.flora1}}, {{this.flora1}}</p>
                <p id="biome">Biome: {{this.biome}} - {{this.biomespecific}}</p>
                <p id="substrate">Substrate: {{this.substrate}}</p>
                <br>
                <p id="desc">{{this.desc}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- END headline -->

  <script>
    window.onload = (event) => {
      $("#container1").twentytwenty();
      console.log($("#embedded").height());
      console.log($("#og").height());
      if($("#embedded").height() < $("#og").height()){
        $("#container1").hide();
        $("#embedbtn").hide();
        $("#og_backup").show();
      }

      if($("#species").text()=="Species: ") $("#species").hide();
      if($("#common").text()=="Common Name: ") $("#common").hide();
      if($("#geo").text()=="Image Captured: (,)") $("#geo").hide();
      if($("#fauna").text()=="Fauna: NA, NA") $("#fauna").hide();
      if($("#flora").text()=="Flora: NA, NA") $("#flora").hide();
      if($("#biome").text()=="Biome:  - ") $("#biome").hide();
      if($("#substrate").text()=="Substrate: NA") $("#substrate").hide();
      if($("#desc").text()=="") $("#desc").hide();

      var fauna = $("#fauna").text();
      if(fauna[fauna.length-2]=='N'&&fauna[fauna.length-1]=='A'){
        fauna = fauna.slice(0, -4);
        $("#fauna").text(fauna);
      }

      var flora = $("#flora").text();
      if(flora[flora.length-2]=='N'&&flora[flora.length-1]=='A'){
        flora = flora.slice(0, -4);
        $("#flora").text(flora);
      }
    };
  </script>
